{
  "name": "mold-inventory-api",
  "version": "1.10.0",
  "private": true,
  "scripts": {
    "dev": "wrangler dev --env dev",
    "staging": "wrangler dev --env staging",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "deploy": "wrangler deploy --minify --env production",
    "upload": "wrangler upload --minify --env production",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:create": "wrangler d1 create mold-inventory-app",
    "db:migrate": "wrangler d1 execute mold-inventory-app --remote -e production --file=./scripts/setup-database.sql",
    "db:migrate:local": "wrangler d1 execute mold-inventory-app -e dev --file=./scripts/setup-database.sql",
    "db:seed": "wrangler d1 execute mold-inventory-app --remote -e production --file=./scripts/seed-data.sql",
    "db:seed:local": "wrangler d1 execute mold-inventory-app -e dev --file=./scripts/seed-data.sql",
    "prisma:generate": "prisma generate"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.3",
    "@prisma/adapter-d1": "^6.16.3",
    "@prisma/client": "^6.16.3",
    "hono": "^4.9.10",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.9.10",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.37.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "prisma": "^6.16.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0",
    "vitest": "~3.2.4",
    "vitest-mock-extended": "^3.1.0",
    "wrangler": "^4.42.0"
  }
}
